// Place this in your project's root directory (not inside src)
{
  "compilerOptions": {
  "target": "ES2020",
  "lib": ["dom", "dom.iterable", "esnext"],
  "allowJs": true,
  "skipLibCheck": true,
  "strict": true,
  "forceConsistentCasingInFileNames": true,
  "module": "ESNext",
  "moduleResolution": "Node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "noEmit": true,
  "jsx": "react-jsx",
  "baseUrl": "src",
  "allowSyntheticDefaultImports": true,
  "esModuleInterop": true,
  "paths": {
    "@/*": ["*"],
    "@components/*": ["components/*"],
    "@types/*": ["types/*"],
    "@utils/*": ["utils/*"],
    "@styles/*": ["styles/*"],    
    "@config/*": ["config/*"],
    "@pages/*": ["pages/*"],
    "@services/*": ["services/*"]
    }
  },
  "include": ["src"]
}